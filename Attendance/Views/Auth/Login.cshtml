</div>

<!-- Popups-->
<div class="modal fade" role="dialog" tabindex="-1" id="myModal">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background: #e0e2e6;"><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button></div>
            <div class="modal-body" style="background: #e0e2e6;">
                <div class="row">
                    <div class="col"><img src="~/img/noun_Teacher_26694.png"></div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="col" style="text-align: center;">
                            <div class="input-group"><span class="input-group-text fas fa-user"></span><input class="form-control" type="text" placeholder="Name"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="input-group"><span class="input-group-text fa fa-envelope"></span><input class="form-control" type="email" placeholder="Email"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col" style="text-align: center;">
                            <div class="input-group"><span class="input-group-text fas fa-lock"></span><input class="form-control" type="password" placeholder="Password"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col" style="text-align: center;">
                            <div class="input-group"><span class="input-group-text fas fa-lock"></span><input class="form-control" type="password" placeholder="Confirm Password"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer d-flex d-sm-flex d-md-flex d-lg-flex justify-content-center justify-content-sm-center justify-content-md-center justify-content-lg-center" style="background: #e0e2e6;"><button class="btn btn-primary" id="first" type="button" style="font-family: 'Arima Madurai', serif;color: rgb(0,32,91);background: #adc7dc;border-style: none;margin-left: 16px;width: 160.203px;font-size: 20px;border-radius: 4px;">Register</button></div>
        </div>
    </div>
</div>
<div class="modal fade" role="dialog" tabindex="-1" id="instructor_modal">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <section class="login-clean">
                <form method="post">
                    <h2 class="visually-hidden">Login Form</h2>
                    <div class="illustration">
