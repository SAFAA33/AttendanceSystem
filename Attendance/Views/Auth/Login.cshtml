                        <input class="form-control" type="text" name="code" placeholder="code" required>
                        <div class="invalid-feedback">
                            please type your Activiation code
                        </div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-primary d-block w-100" type="submit" style="color: #00205b;background: #adc7dc;">Activate Account</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>


